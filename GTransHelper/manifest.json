{
  "name": "GTransHelper",
  "description": "Google Translator Helper",
  "version": "0.1",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
        "matches": ["https://translate.google.com/*"],
        "js": ["content_script.js"],
        "run_at": "document_idle",
        "all_frames": true
    }
],
 "browser_action": {
    "default_title": "GTransHelper"
  },
  "manifest_version": 2
}